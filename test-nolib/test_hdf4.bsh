#!/bin/bash
# example without using f90gio libs
#set -xe

FC=`cat ../src/makefile.config |grep FC | head -1 | cut -d "=" -f2`
FC_CFLAGS=`cat ../src/makefile.config |grep FC_CFLAGS|cut -d '=' -f2`
FC_LFLAGS=`cat ../src/makefile.config |grep FC_LFLAGS|cut -d '=' -f2`

H4_CFLAGS=`cat ../src/makefile.config |grep H4_CFLAGS|cut -d '=' -f2`
H4_LFLAGS=`cat ../src/makefile.config |grep H4_LFLAGS|cut -d '=' -f2`

cp ../src/mod_f90gioh4.f90 . 
cp ../test/test_h4.f90 .

$FC ${FC_CFLAGS} ${H4_CFLAGS} mod_f90gioh4.f90 test_h4.f90 ${FC_LFLAGS} -o test_h4.exe ${H4_LFLAGS}

./test_h4.exe > results.hdf

diff results.hdf ../test/h4.results_correct
nl=`diff results.hdf ../test/h4.results_correct | wc -l`
if [ $nl -eq 0 ]; then
   echo "test_h4.f90 without libs              PASSED"
else
   echo "test_h4.f90 without libs              FAILED"
fi


rm *.mod *.exe *.f90 *.hdf
